= form_for(@local) do |f|
  - if @local.errors.any?
    #error_explanation
      %h2
        = pluralize(@local.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @local.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Nome"
    = f.text_field :name
  %br/
  .actions
    = f.submit "OK"
