<%= form_for [@plannable, Planning.new] do |f| %>
  <% if @planning.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@planning.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @planning.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Quantidade planejada no período (em " + @planning.plannable.unity + ")" %>
    <%= f.number_field :planned_quantity %>
  </div>
  <div class="field">
    <%= f.label "Quantidade realizada no período (em " + @planning.plannable.unity + ")" %>
    <%= f.number_field :quantity %>
  </div>
  <Br>
  <div class="actions">
    <%= f.submit "OK" %>
  </div>
  <br>
  <b>Início do período: <font color = "red"><%= Date.current.to_formatted_s(:rfc822) %><br></font>
  Fim do período: <font color = "red"><%= (Date.current + 7.days).to_formatted_s(:rfc822) %></b></font>
<% end %>
