= form_for(@program, :multipart => true) do |f|
  - if @program.errors.any?
    #error_explanation
      %h2
        = pluralize(@program.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @program.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Nome"
    = f.text_field :name
    %br
    = f.file_field :image
  %br
    .actions
      = f.submit "OK", class: "btn btn-success"