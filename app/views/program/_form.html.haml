= form_for(@program) do |f|
  - if @program.errors.any?
    #error_explanation
      %h2
        = pluralize(@program.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @program.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Nome"
    = f.text_field :name
  .field
    = f.label "Pre√ßo"
    = f.text_field :price
  .field
    = f.label "hh"
    = f.number_field :hh
  .field
    = f.label "Porcentagem (%)"
    = f.number_field :percentage
  .field
    = f.label "Valor"
    = f.number_field :value
  %br/
  .actions
    = f.submit "Criar programa"
