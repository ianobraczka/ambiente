= form_for(@system) do |f|
  - if @system.errors.any?
    #error_explanation
      %h2
        = pluralize(@system.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @system.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Nome"
    = f.text_field :name
  %br/
  .actions
    = f.submit "OK", :class => "btn btn-success"
