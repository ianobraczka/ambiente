<%= form_for(@system) do |f| %>
  <% if @system.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@system.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @system.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nome" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Áreas" %>
    <%= f.select :area_ids, Area.all.collect {|area| [area.name, area.id]}, {:include_blank => 'Nenhuma'}, :multiple => true, class: "dropdown_checkbox" %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "OK", :class => "btn btn-success" %>
  </div>
<% end %>
